@model IEnumerable<CadastroProdutosFinal.Models.Produto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mt-3">
        <i class="fa-solid fa-circle-plus" style="margin-right:9px;"></i>Criar Novo Produto
    </a>
</p>
<table class="table table-bordered w-100">
    <thead>
        <tr>
            <th>
                <h6>@Html.DisplayNameFor(model => model.Id)</h6>
            <th style="width:50%">
                <h6>Nome</h6>
            </th>
            <th>
                <h6>Quantidade</h6>
            </th>
            <th>
                <h6>Preço</h6>
            </th>
            <th>
                <h6>Total</h6>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
                <td style="width:50%">
                @Html.DisplayFor(modelItem => item.NomeProduto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">
                        <i class="fa-solid fa-pen-to-square" style="margin-right:9px;"></i>Editar
                    </a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">
                        <i class="fa-solid fa-circle-info" style="margin-right:9px;"></i>Detalhes
                    </a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                        <i class="fa-solid fa-trash-can" style="margin-right:9px;"></i>Deletar
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>
